# Nginxログローテーション設定
# Task 5.3: ログ転送機能実装
# FQDN別ディレクトリのログファイルを毎日ローテート

/var/log/nginx/*/access.log /var/log/nginx/*/error.log {
    daily
    rotate 30
    compress
    delaycompress
    notifempty
    missingok
    sharedscripts
    postrotate
        [ -f /var/run/nginx.pid ] && kill -USR1 `cat /var/run/nginx.pid`
    endscript
}
